<div class="container">
  <div class="card">
    <!-- Card header -->
    <div class="card-header">
      <h3 class="mb-0">プロフィール</h3>
      <div id="js-follow-form">
        <%= render 'shared/follow_form' %>
      </div>
    </div>
    <!-- Card body -->
    <div class="card-body">
      <div class="profile">
        <h4>Name:</h4>
        <p><%= @user.name %></p>
        <h4>Profile:</h4>
        <p><%= @user.profile %></p>
        <h4>Hobby:</h4>
        <p><%= @user.hobby %></p>
      </div>
      <hr class="my-5">
    </div>
  </div>
</div>